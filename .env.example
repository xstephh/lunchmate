# -------- Database --------
# Local sqlite (dev & CI)
DATABASE_URL="file:./dev.db"
# Prod (Vercel) should use your Supabase Postgres URL

# -------- Places providers --------
# mock | osm | google  (osm = $0 by default)
PLACES_PROVIDER=osm
PLACES_ENABLED=true

# Budget guard (blocks paid calls when 0)
BUDGET_PROVIDER=google
BUDGET_DAILY_REQUESTS=0

# Cache & tuning
PLACES_CACHE_TTL_SECONDS=86400
NEARBY_RADIUS_METERS_DEFAULT=1500
MIN_PUBLIC_RATING=4.0
SUGGESTION_EPSILON=0.15
SUGGESTION_RADIUS_METERS=1000
SUGGESTION_MIN_PUBLIC_RATING=4.0

# Google Places (server-only; set only when you enable google)
# GOOGLE_MAPS_API_KEY=your_server_side_key

# Optional map embed (client)
# NEXT_PUBLIC_GOOGLE_MAPS_EMBED_API_KEY=your_public_key

# Feature flags
NEXT_PUBLIC_ALLOW_MANUAL_ADD=false
